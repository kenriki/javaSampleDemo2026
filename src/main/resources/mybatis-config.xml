<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE configuration PUBLIC "-//mybatis.org//DTD Config 3.0//EN" "http://mybatis.org/dtd/mybatis-3-config.dtd">
<configuration>

	<!-- 設定 -->
	<settings>
		<!-- スネークケース(DB)からキャメルケース(Java)への自動変換 -->
		<setting name="mapUnderscoreToCamelCase" value="true" />
	</settings>

	<!-- 型エイリアス（フルパッケージ名を短縮） -->
	<typeAliases>
		<typeAlias type="entity.ScoreEntity" alias="ScoreEntity" />
		<typeAlias type="entity.UserEntity" alias="UserEntity" />
	</typeAliases>

	<environments default="development">
		<environment id="development">
			<transactionManager type="JDBC" />
			<dataSource type="POOLED">
				<property name="driver" value="org.postgresql.Driver" />
				<property name="url"
					value="jdbc:postgresql://localhost:5432/sample_db?currentSchema=db1" />
				<property name="username" value="postgres" />
				<property name="password" value="postgres" />
			</dataSource>
		</environment>
	</environments>

	<mappers>
		<mapper resource="dao/ScoreMapper.xml" />
	</mappers>

</configuration>